<% provide(:title, "Perfil de #{@user}") %>

<section id="user_profile">
  <header class="page-header">
    <h1><%= image_tag @user.image, class: "img-circle" %> <%= @user %> <small class="hidden-xs">Partidos votados</small></h1>
  </header>
  <nav>
    <ol class="breadcrumb">
      <li>Usuarios</li>
      <li class="active"><%= @user %></li>
    </ol>
  </nav>
  <section class="container text-center" id="rated-games">
    <% @games.each do |game| %>
      <div class="rated-game">
        <h3>
        <%= image_for(game.home_team, :large) %> 
        &nbsp;
        <%= link_to game, user_game_path(@user,game), class: "hidden-xs" %>
        <%= link_to game.result, user_game_path(@user,game), class: "visible-xs" %>
        &nbsp;<%= image_for(game.away_team, :large) %>
        <small><%= time_for_game(game.date) %></small>
        </h3>
      </div>
    <% end %>
    <%= will_paginate @games, previous_label: content_tag(:i, '', class: 'fa fa-chevron-left'), next_label: content_tag(:i, '', class: 'fa fa-chevron-right'), renderer: BootstrapPagination::Rails %>
  </section>
</section>